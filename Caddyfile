:8080 {
    # Routes API et WebSocket vers le backend
    @backend {
        path /_event /_event/ /_event/*
        path /ping
        path /_upload /_upload/ /_upload/*
    }
    handle @backend {
        reverse_proxy localhost:8000
    }

    # Fichiers statiques
    handle {
        root * /app/.web/_static
        try_files {path} {path}/ /index.html
        file_server
        encode gzip
    }
}
