:{$PORT} {
    # Logs pour debug
    log {
        output stdout
        format console
        level INFO
    }
    
    # WebSocket - IMPORTANT: doit être en premier pour Reflex
    @websocket {
        header Connection *Upgrade*
        header Upgrade websocket
    }
    reverse_proxy @websocket localhost:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Proxifier les requêtes backend Reflex
    @backend {
        path /_event
        path /_event/*
        path /ping
        path /_upload
        path /_upload/*
        path /api/*
    }
    reverse_proxy @backend localhost:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Servir les fichiers statiques du frontend Reflex
    root * /app/.web/_static
    
    # SPA: servir index.html pour toutes les routes non trouvées
    try_files {path} {path}/ /index.html
    file_server
    
    # Compression
    encode gzip zstd
    
    # Headers de sécurité
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }
    
    # Cache pour les assets statiques
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.ico *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
}