{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt && reflex init && reflex export --frontend-only --no-zip"
  },
  "deploy": {
    "startCommand": "reflex run --env prod --backend-only --backend-host 0.0.0.0 --backend-port $PORT",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}